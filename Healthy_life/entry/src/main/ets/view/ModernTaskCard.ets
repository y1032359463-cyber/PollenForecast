@Component
export struct ModernTaskCard {
  @Prop icon: string = 'ðŸ“'; // emojiå›¾æ ‡
  @Prop title: string = 'ä»»åŠ¡';
  @Prop current: number = 0;
  @Prop total: number = 1;
  @Prop unit: string = 'æ¬¡';
  @Prop color: string = '#00C853'; // ä»»åŠ¡ç±»åž‹é¢œè‰²
  onTaskClick?: () => void; // ç‚¹å‡»å›žè°ƒ
  @State isPressed: boolean = false;

  // è®¡ç®—å®Œæˆç™¾åˆ†æ¯”
  private getProgress(): number {
    if (this.total === 0) return 0;
    return Math.min((this.current / this.total) * 100, 100);
  }

  // èŽ·å–ä»»åŠ¡ç±»åž‹é¢œè‰²
  private getTaskColor(): string {
    return this.color || StyleUtils.getPrimaryColor();
  }

  build() {
    Column() {
      // é¡¶éƒ¨: å›¾æ ‡åœ†å½¢
      Stack() {
        // æ¸å˜èƒŒæ™¯åœ†å½¢
        Circle()
          .width(48)
          .height(48)
          .fill(this.getTaskColor())
          .shadow({
            radius: 12,
            color: this.getTaskColor() + '40', // 25% é€æ˜Žåº¦
            offsetY: 4
          })

        // Emojiå›¾æ ‡
        Text(this.icon)
          .fontSize(24)
          .textAlign(TextAlign.Center)
      }
      .margin({ bottom: 12 })
      .transition({
        type: TransitionType.All,
        scale: { x: this.isPressed ? 1.1 : 1.0, y: this.isPressed ? 1.1 : 1.0 }
      })
      .animation({
        duration: 200,
        curve: Curve.EaseOut
      })

      // ä¸­é—´: ä»»åŠ¡æ ‡é¢˜
      Text(this.title)
        .fontSize(16)
        .fontWeight(600)
        .fontColor(StyleUtils.getTextPrimaryColor())
        .textAlign(TextAlign.Center)
        .width('100%')
        .maxLines(1)
        .textOverflow({ overflow: TextOverflow.Ellipsis })
        .margin({ bottom: 12 })

      // è¿›åº¦æ¡
      Stack() {
        // èƒŒæ™¯è½¨é“
        Row()
          .width('100%')
          .height(6)
          .borderRadius(3)
          .backgroundColor(StyleUtils.getBackgroundColor())

        // è¿›åº¦å¡«å……
        Row()
          .width(`${this.getProgress()}%`)
          .height(6)
          .borderRadius(3)
          .backgroundColor(this.getTaskColor())
          .transition({ type: TransitionType.All })
          .animation({
            duration: 300,
            curve: Curve.EaseOut
          })
      }
      .width('100%')
      .margin({ bottom: 8 })

      // åº•éƒ¨: è¿›åº¦æ–‡æœ¬
      Text(`${this.current} / ${this.total} ${this.unit}`)
        .fontSize(14)
        .fontWeight(500)
        .fontColor(StyleUtils.getTextSecondaryColor())
        .textAlign(TextAlign.Center)
        .width('100%')
    }
    .width('100%')
    .padding(16)
    .backgroundColor(StyleUtils.getBackgroundColor())
    .borderRadius(12)
    .border({ 
      width: 1, 
      color: '#E0E0E0' 
    })
    .shadow({
      radius: 12,
      color: 'rgba(0, 0, 0, 0.06)',
      offsetY: 2
    })
    .scale({ 
      x: this.isPressed ? 0.98 : 1.0, 
      y: this.isPressed ? 0.98 : 1.0 
    })
    .animation({
      duration: 150,
      curve: Curve.EaseOut
    })
    .onClick(() => {
      if (this.onTaskClick) {
        this.onTaskClick();
      }
    })
    .onTouch((event?: TouchEvent) => {
      if (event) {
        if (event.type === TouchType.Down) {
          this.isPressed = true;
        } else if (event.type === TouchType.Up || event.type === TouchType.Cancel) {
          this.isPressed = false;
        }
      }
    })
  }
}
